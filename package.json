{
  "name": "react-native-customerly-sdk",
  "version": "0.1.0",
  "description": "Customerly SDK for integration in React Native app",
  "main": "./lib/commonjs/index.js",
  "module": "./lib/module/index.js",
  "types": "./lib/typescript/commonjs/index.d.ts",
  "source": "src/index.tsx",
  "files": [
    "src",
    "lib"
  ],
  "keywords": [
    "react-native",
    "ios",
    "android",
    "messenger",
    "messaging",
    "live-chat",
    "sdk",
    "customerly"
  ],
  "repository": "https://github.com/Customerly/CustomerlyReactNativeSDK",
  "author": "Customerly (https://customerly.io)",
  "license": "GPL-3.0-only",
  "homepage": "https://customerly.io",
  "scripts": {
    "check-ts": "tsc --noEmit",
    "build": "bob build",
    "build:clean": "rm -rf lib && yarn build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "prepare": "bob build"
  },
  "dependencies": {},
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@eslint/json": "^0.12.0",
    "@notifee/react-native": "^9.1.8",
    "@types/react": "^19.1.5",
    "auto-changelog": "^2.5.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.2.0",
    "prettier": "3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-sort-json": "^4.1.1",
    "react": "18.3.1",
    "react-native": "0.76.0",
    "react-native-builder-bob": "^0.40.11",
    "react-native-safe-area-context": "^5.4.1",
    "react-native-webview": "^13.13.5",
    "release-it": "^19.0.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  },
  "peerDependencies": {
    "@notifee/react-native": "*",
    "@types/react": "*",
    "@types/react-native": "*",
    "react": "*",
    "react-native": "*",
    "react-native-safe-area-context": "*",
    "react-native-webview": "*"
  },
  "peerDependenciesMeta": {
    "@types/react-native": {
      "optional": true
    },
    "@types/react": {
      "optional": true
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "exports": {
    ".": {
      "source": "./src/index.tsx",
      "import": {
        "types": "./lib/typescript/module/index.d.ts",
        "default": "./lib/module/index.js"
      },
      "require": {
        "types": "./lib/typescript/commonjs/index.d.ts",
        "default": "./lib/commonjs/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "commonjs",
        {
          "esm": true
        }
      ],
      "typescript"
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ]
}
